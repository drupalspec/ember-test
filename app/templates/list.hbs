<div class="container">
  <div class="row">
    <div class="col-md-6">
      <h4>Products list</h4>
      <ul class="list-group">
        {{#each model as |list|}}
          <li class="list-group-item">
            <a target="_blank" href="http://{{list.homepage}}">{{list.description}}</a>
          </li>
        {{/each}}
        <li class="list-group-item">
          {{#link-to 'list.new' class="btn btn-primary btn-block"}}Add new product{{/link-to}}
        </li>
      </ul>
    </div>
    <div class="col-md-6">
      {{outlet}}
    </div>
  </div>
</div>